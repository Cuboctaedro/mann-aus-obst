extends _layout.pug
block title
    title #{get(title)} - #{siteTitle}

block meta

block content
    section
        header(class="pr-15 pl-15 mb-90")
            - var pagetitle = get(title)
            h1(class="large-title") #{pagetitle}
            
        div(class="pr-15 pl-15 xl__w-3of4 xl__ml-1of4")
            div( id="content")
                - md.use(implicitFigures, {dataType: false, figcaption: false });
                - var body = md.render(get(content))
                | !{ body }                
